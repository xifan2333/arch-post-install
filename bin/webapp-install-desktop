#!/bin/bash
# Install web application as desktop entry
# Usage: webapp-install <app-name> <app-url> <icon-ref> [custom-exec] [mime-types]

APP_NAME="$1"
APP_URL="$2"
ICON_REF="$3"
CUSTOM_EXEC="$4"  # Optional custom exec command
MIME_TYPES="$5"   # Optional mime types

if [[ -z "$APP_NAME" || -z "$APP_URL" || -z "$ICON_REF" ]]; then
    echo "Error: App name, URL, and icon are required" >&2
    echo "Usage: webapp-install <app-name> <app-url> <icon-ref> [custom-exec] [mime-types]" >&2
    exit 1
fi

# Create icon directory
ICON_DIR="$HOME/.local/share/applications/icons"
mkdir -p "$ICON_DIR"

# Refer to local icon or fetch remotely from URL
if [[ $ICON_REF =~ ^https?:// ]]; then
    ICON_PATH="$ICON_DIR/$APP_NAME.png"

    if ! curl -sL -o "$ICON_PATH" "$ICON_REF"; then
        echo "Error: Failed to download icon from $ICON_REF" >&2
        exit 1
    fi
else
    ICON_PATH="$ICON_DIR/$ICON_REF"
fi

# Use custom exec if provided, otherwise default behavior
if [[ -n $CUSTOM_EXEC ]]; then
    EXEC_COMMAND="$CUSTOM_EXEC"
else
    EXEC_COMMAND="webapp-launch '$APP_URL' '$APP_NAME'"
fi

# Create application .desktop file
DESKTOP_FILE="$HOME/.local/share/applications/$APP_NAME.desktop"

cat >"$DESKTOP_FILE" <<EOF
[Desktop Entry]
Version=1.0
Name=$APP_NAME
Comment=$APP_NAME web application
Exec=$EXEC_COMMAND
Terminal=false
Type=Application
Icon=$ICON_PATH
StartupNotify=true
Categories=WebApp;Network;
EOF

# Add mime types if provided
if [[ -n $MIME_TYPES ]]; then
    echo "MimeType=$MIME_TYPES" >>"$DESKTOP_FILE"
fi

chmod +x "$DESKTOP_FILE"

# Update desktop database
if command -v update-desktop-database >/dev/null 2>&1; then
    update-desktop-database "$HOME/.local/share/applications" 2>/dev/null || true
fi

echo "$APP_NAME"
