#!/bin/bash
# Save fullscreen screenshot to file and copy image to clipboard

set -e
source "$HOME/.local/lib/lib-screenshot"
source "$HOME/.local/lib/lib-ui-i18n"

screenshot_check_deps

filename=$(screenshot_filename)
filepath="$SCREENSHOTS_DIR/$filename"

grim "$filepath"
wl-copy < "$filepath"

if command -v notify-send >/dev/null 2>&1; then
    notify-send "$(msg screenshot_notify_title)" "$(msg screenshot_notify_saved filename "$filename")"
fi
