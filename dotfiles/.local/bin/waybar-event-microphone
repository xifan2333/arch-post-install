#!/bin/bash
# Waybar microphone event handler
# Handles click and scroll events for microphone control

source "$HOME/.local/lib/lib-microphone"

case "$1" in
    click)
        mic_toggle_mute
        ;;
    scroll-up)
        mic_volume_up
        ;;
    scroll-down)
        mic_volume_down
        ;;
    *)
        echo "Usage: $0 {click|scroll-up|scroll-down}"
        exit 1
        ;;
esac
