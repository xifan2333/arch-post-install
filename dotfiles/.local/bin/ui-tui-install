#!/bin/bash
# Interactive TUI installer with wofi
# Create .desktop entries for TUI programs

# Load i18n
source "$HOME/.local/lib/lib-ui-i18n"

# Get app name via wofi
app_name=$(echo "" | wofi --dmenu -p "${i18n[tui_install_app_prompt]}")
[ -z "$app_name" ] && exit 0

# Get command via wofi
app_cmd=$(echo "" | wofi --dmenu -p "${i18n[tui_install_cmd_prompt]}")
[ -z "$app_cmd" ] && exit 0

# Create .desktop file
"$HOME/.local/lib/lib-tui-install" "$app_name" "$app_cmd"

# Notify success
notify-send "${i18n[tui_install_title]}" "$(msg tui_install_success app "$app_name")" 2>/dev/null
