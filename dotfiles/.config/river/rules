#!/bin/sh
# River window rules

# Server-side decorations (SSD) for all windows
riverctl rule-add -app-id "*" ssd

# Floating windows
riverctl rule-add -app-id "scratchpad" float                        # Scratchpad terminal
riverctl rule-add -title "Floating_Term" float                      # Floating terminal
riverctl rule-add -app-id "file-*" float                            # GIMP file dialogs
riverctl rule-add -app-id "script-fu" float                         # GIMP script-fu
riverctl rule-add -app-id "electron" -title "Open*" float           # Electron open dialogs
riverctl rule-add -app-id "kdenlive" float                          # kdenlive dialogs

# Add more rules as needed
# Examples:
# riverctl rule-add -title "Picture-in-Picture" float
# riverctl rule-add -app-id "mpv" float
